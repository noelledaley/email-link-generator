<div class="container">
  <h1>
    Magic Email Link Generator
  </h1>
  <div class="grid">
    <Form @updateData={{this.updateData}} @body={{this.body}} />
    <div>
      <Preview
        @email={{this.email}}
        @subject={{this.subject}}
        @body={{this.body}}
      />
      <EmailButton />
    </div>
  </div>
</div>
