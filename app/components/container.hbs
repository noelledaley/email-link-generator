<div class="container">
  <h1>
    Magic Email Link Generator
  </h1>
  <div class="grid">
    <div class="grid-item">
      <Form @updateData={{this.updateData}} @body={{this.body}} />
    </div>
    <div class="grid-item">
      <h2>
        Links
      </h2>
      <EmailLink
        @link={{this.gmailLink}}
        @text="Gmail"
        @onCopy={{this.copyAndClear}}
        @copiedLink={{this.copiedLink}}
      />
      <EmailLink
        @link={{this.emailLink}}
        @text="Default Mail App"
        @onCopy={{this.copyAndClear}}
        @copiedLink={{this.copiedLink}}
      />
    </div>
  </div>
</div>
