<div class="link-container">
  <label>
    {{@text}} Link
    <input disabled class="input-item" name="link" value={{@link}} />
  </label>
  <CopyButton
    class="button"
    @clipboardText={{@link}}
    @success={{fn @onCopy @link}}
  >
    {{if this.isCopied "Copied!" "Copy"}}
  </CopyButton>
</div>
